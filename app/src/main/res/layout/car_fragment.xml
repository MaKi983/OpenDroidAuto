<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F1F1F1"
    android:layout_marginBottom="64dp"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:labelFor="@id/hu_name"
        android:textColor="#000"
        android:text="@string/car_settings_hu_name"/>

    <EditText
        android:id="@+id/hu_name"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center_horizontal"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:textColor="#000"
        android:inputType="text"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:labelFor="@id/car_model"
        android:textColor="#000"
        android:text="@string/car_settings_model"/>

    <EditText
        android:id="@+id/car_model"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center_horizontal"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:textColor="#000"
        android:inputType="text"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:labelFor="@id/car_year"
        android:textColor="#000"
        android:text="@string/car_settings_year"/>

    <EditText
        android:id="@+id/car_year"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:inputType="number"
        android:gravity="center_horizontal"
        android:textColor="#000"
        android:imeOptions="actionDone" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:labelFor="@id/hu_make"
        android:textColor="#000"
        android:text="@string/car_settings_hu_make"/>

    <EditText
        android:id="@+id/hu_make"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center_horizontal"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:textColor="#000"
        android:inputType="text" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:labelFor="@id/hu_model"
        android:textColor="#000"
        android:text="@string/car_settings_hu_model"/>

    <EditText
        android:id="@+id/hu_model"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center_horizontal"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:textColor="#000"
        android:inputType="text" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:labelFor="@id/sw_build"
        android:textColor="#000"
        android:text="@string/car_settings_sw_build"/>

    <EditText
        android:id="@+id/sw_build"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center_horizontal"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:textColor="#000"
        android:inputType="text" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:labelFor="@id/sw_version"
        android:textColor="#000"
        android:text="@string/car_settings_sw_version"/>

    <EditText
        android:id="@+id/sw_version"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:gravity="center_horizontal"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:textColor="#000"
        android:inputType="text" />

    <CheckBox
        android:id="@+id/play_media_during_vr"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:text="@string/car_settings_play_media_during_vr" />

    <CheckBox
        android:id="@+id/hide_clock"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:text="@string/car_settings_hide_clock" />

    <CheckBox
        android:id="@+id/left_drive"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:text="@string/car_settings_left_drive" />

<!--
    <CheckBox
        android:id="@+id/aa_wifi"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/car_settings_aa_wifi" />
-->

    <CheckBox
        android:id="@+id/disableStartUsbBadge"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/video_disable_start_usb_badge"
        android:textColor="#000" />

    <LinearLayout
        android:id="@+id/autoStartTimerContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:padding="16dp">

        <TextView
            android:id="@+id/autoStartTimerLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/car_settings_auto_start_timer"
            android:textColor="#000"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <SeekBar
                android:id="@+id/autoStartTimerSeekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="10"
                android:progress="0" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/autoStartTimerValueNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="16sp"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/autoStartTimerValueSuffix"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="s"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_marginStart="2dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
