<!--        android:layout_gravity="center"-->
<!--        android:layout_marginTop="10dp"-->
<!--        android:text="@string/video_settings_exp_omxvideocodec"-->
<!--        android:textColor="#000" />-->

    <CheckBox
        android:id="@+id/showMediaNotification"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/video_show_media_notification"
        android:textColor="#000" />

    <CheckBox
        android:id="@+id/showNavigationNotification"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/video_show_navigation_notification"
        android:textColor="#000" />

    <CheckBox
        android:id="@+id/showAppBadge"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/video_show_app_badge"
        android:textColor="#000" />

</LinearLayout>
